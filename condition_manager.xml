<!-- Swedz's D&D 5e Condition Manager [Version 1.4] for Tabletop Simulator -->

<Defaults>
	<Text class="header" rectAlignment="UpperLeft" height="50" fontSize="20" fontStyle="Bold"/>
	<Button class="closeButton" width="25" height="25" rectAlignment="UpperRight" color="#eeeeee" offsetXY="-3 -3"/>
	<Button class="conditionToggle" color="White" colors="#C8C8C8|#888888|#888888|#888888" textOutline="#C8C8C8" fontSize="10" fontStyle="Bold"/>
</Defaults>

<Panel id="ConditionsPanel"
	   active="false"
	   width="500"
	   height="510"
	   rectAlignment="MiddleCenter"
	   returnToOriginalPositionWhenReleased="false"
	   allowDragging="true"
	   color="#bbbbbb">

<Text class="header">Conditions</Text>
<Button id="close" class="closeButton" onClick="8b6de7/closeConditionMenu">X</Button>

<Text id="title_inactive" class="header" offsetXY="0 -50">Inactive</Text>
<GridLayout id="gridlayout_inactive" padding="5 5 0 5" spacing="5 5" cellSize="94 25" offsetXY="0 -100">
	{{INACTIVE_BUTTONS}}
</GridLayout>

<Text id="title_active" class="header" offsetXY="0 -280">Active</Text>
<GridLayout id="gridlayout_active" padding="5 5 0 5" spacing="5 5" cellSize="94 25" offsetXY="0 -330">
	{{ACTIVE_BUTTONS}}
</GridLayout>

</Panel>
